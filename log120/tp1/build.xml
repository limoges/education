<?xml version="1.0"?>
<project name="log120-tp1" default="assemble" basedir=".">
  <description>
    Travail Pratique 1 - LOG120
  </description>

  <!-- program entry point -->
  <property name="main-class" value="ApplicationSwing" />

  <!-- properties -->
  <property name="name" value="tp1.jar" />
  <property name="src.dir" location="src" />
  <property name="build.dir" location="build" />
  <property name="docs.dir" location="docs" />

  <!-- targets-->
  <target name="compile">
    <mkdir dir="${build.dir}" />
    <javac includeantruntime="false" srcdir="${src.dir}" destdir="${build.dir}" />
  </target>

  <target name="assemble" depends="compile" description="assembles file into a jar">
    <jar jarfile="${name}" basedir="${build.dir}" >
      <manifest>
        <attribute name="Built-by" value="${user.name}" />
        <attribute name="Main-Class" value="${main-class}" />
      </manifest>
    </jar>
  </target>

  <target name="docs" description="builds documentation from javadocs in source">
    <mkdir dir="${docs.dir}" />
    <javadoc sourcepath="src.dir" destdir="docs.dir" Public="true" Overview="true" Locale="en_US">
    </javadoc>
  </target>

  <target name="run" depends="assemble" description="runs the created jar">
    <java jar="${name}" fork="true" />
  </target>
  <target name="clean">
    <delete verbose="true">
      <fileset dir="${build.dir}">
        <exclude name="**/*.properties" />
      </fileset>
    </delete>
  </target>
</project>
